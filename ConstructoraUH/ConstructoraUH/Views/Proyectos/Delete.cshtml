@model ConstructoraUH.Models.Proyecto

@{
    ViewData["Title"] = "Eliminar Proyecto";
}

<h1>Eliminar Proyecto</h1>

<h3>¿Está seguro de que desea eliminar este proyecto?</h3>
<div>
    <h4>Proyecto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoProyecto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CodigoProyecto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFinalizacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFinalizacion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CodigoProyecto" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>