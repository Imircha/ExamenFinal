@model ConstructoraUH.Models.Asignacion

@{
    ViewData["Title"] = "Eliminar Asignación";
}

<h1>Eliminar Asignación</h1>

<h3>¿Está seguro de que desea eliminar esta asignación?</h3>
<div>
    <h4>Asignación</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Empleado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Empleado.NombreCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Proyecto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Proyecto.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaAsignacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaAsignacion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AsignacionId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>